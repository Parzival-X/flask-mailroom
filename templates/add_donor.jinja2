{% extends 'base.jinja2' %}

{% block subtitle %}Add a new donor{% endblock subtitle %}

{% block content %}

  {% if error %}<p style="color:red;">{{ error }}</p>{% endif %}

  <h5>Current list of donors: </h5>
  <ul>
    {% for donor in donors %}
      <li>
          {{donor.name}}
      </li>
    {% endfor %}
  </ul>

  <form method="POST">

    <label for="donor_name">New Donor: </label>
    <input type="text" id="donor_name" name="donor_name"><br />

    <input type="submit" value="Submit">

  </form>
{% endblock content %}
